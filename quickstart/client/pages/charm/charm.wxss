@import '../template/template.wxss';

.swiper-box {
  display: block;
  overflow: hidden;
  margin-top: 80rpx;
  width: 100%;
  /* height: 750px;
  height:16000000px;  */
  height:flex; 
  background: #e5e5e5;
   background: #fff; 
   margin-bottom: 150rpx; 
  /* background:red; */
  /* margin-bottom: 100px; */
  z-index: 0;
}

.swiper-box view {
  text-align: center;
}
#header{
  background: #e5e5e5;
}
#header, #main {
  display: flex;
  flex-flow: row;
}
 #main{
   border-bottom: 2rpx solid #e5e5e5;
 }
#header text {
  width: 33.33%;
  height: 74rpx;
  font-size: 94%;
  line-height: 74rpx;
}

#main {
  margin-bottom: 2rpx;
  background: #fff;
}

#main text {
  width: 33.33%;
  height: 100rpx;
  font-size: 114%;
  line-height: 100rpx;
}

#header .world-nickName, #main .world-nickName {
  overflow: hidden;
  width: 60%;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.IMG {
  /* position: fixed; */
  position: absolute;
  left: 6%;
  width: 98rpx;
  height: 98rpx;
}

.IMG image {
  width: 100%;
  height: 100%;
}
.img-plus-style {  
  height: 60rpx;  
  width: 60rpx;  
  position: absolute;  
  bottom: 0rpx;  
  right: 0rpx;  
  z-index: 100;  
}  
.img-text{
    height: 60rpx;  
  width: 150rpx;  
