/*
自主定义
 */

.cart-box {
  height: 100%;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-buttom: 200rpx;
}
.cart-list {
  width: 28%;
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 20rpx 20rpx;
  float: left;
}
.cart-list .cart-pro-select {
  position: absolute;
  top: 10rpx;
  left: initial;
  right: 10rpx;
}
.cart-thumb {
  width: 144rpx;
  height: 144rpx;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
}
.cart-pro-name, .cart-pro-price {
  text-align: center;
  font-size: 90%;
  margin: 3rpx auto;
  display: block;
}
.cart-count-box text {
  width: 28%;
  height: 100%;
  display: inline-block;
  border: 1rpx solid #888;
  text-align: center;
}
.cart-count-box text.cart-count-down {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
}
.cart-count-box text.cart-count-add {
  position: absolute;
  right: 0;
  top: 0;
}
