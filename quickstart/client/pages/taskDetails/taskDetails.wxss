
page{
	background: #f5f5f5;
}
.section{
	margin:50rpx 36rpx 0 36rpx;
	height: 320rpx; 
}
.section.center{
	background: #fff;
	overflow: scroll;
  border: 10rpx solid #e4c6d4;
  border-radius: 20rpx;
}
.section.center view{
  width: 50%;
  height: 100%;
  float: left;
}
.section.center .taskDetails-left,.section.center .taskDetails-rigth{
	position: relative;
	z-index: 0;
}
.section.center .taskDetails-left text,.section.center .taskDetails-rigth text{
	position: absolute;
	top: 3%;
	left:3%;
	z-index:22;
	color: #fff;
	width: 94%;
	height: 94%;
	display: block;
	background: transparent;
	line-height: 42rpx;
	  overflow: hidden; 
	  font-size: 90%;
}
.section.center view image{
	width: 100%;
	height: 100%;
	display: block;
  border:none;   
}
.footer{
	background: #fff;
 margin-top: 120rpx;
 display: flex;
 flex-direction: column ;
}
.footer view{
	border-bottom: 1rpx solid #c8c8c8;
	text-align: center;
	line-height: 60rpx;
	font-size: 90%;
	display: flex;
	flex-direction:row;
	justify-content: flex-start; 
}
.footer-top text{
	margin: 0 auto;
}
.footer text{
	font-size: 90%;
	width: 50%;
}
.footer .fl{
  width: 30%;
	text-align: left;
	padding-left: 6%;
  line-height: flex;
}
.footer .fr{
  width: 70%;
	text-align: left;
	padding-right: 6%; 
  overflow: hidden; 
  line-height: 40rpx;
}
.center view {
	position: relative;
  border:none; 
}
.center view text{
	display: block;
}
.but{
	width: 100%;
	height: 50rpx;line-height: 50rpx;
	position: absolute;
	bottom: 0;
	text-align: center;
  overflow: hidden;
}
.butImage{
	width: 100%;
	height: 50rpx;line-height: 50rpx;
	position: absolute;
	bottom: 0;
	text-align: center;
}
