page {
  background: #ebebeb;
}

.section {
  margin: 45rpx 50rpx 0 50rpx;
  /* height: 88rpx; */
}

.section.top {
  height: 88rpx;
  line-height: 88rpx;
  margin: 20rpx 50rpx;
  font-size: 120%;
  font-weight: bold;
  letter-spacing: 100rpx;
  text-align: center;
  padding-left: 20%;
  color: #883f9e;
}

input, textarea {
  border: 2rpx solid #bfbfbf;
  background: #fff;
  width: 100%;
}

.section.bot textarea {
  height: 300rpx;
}

.section .input-placeholder {
  color: #9c9c9c;
}
.btn-area button {
  margin: 0 50rpx 40rpx 50rpx;
  color: #fff;
  letter-spacing: 50rpx;
  padding-right: 0;
}

.btn-area .submit {
  background: #e4c6d4;
}

.btn-area .reset {
  background: #b5b5b5;
}

.cue {
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  color: #c184a3;
  text-align: center;
  margin-top: 16rpx;
}

.upTaskT {
  width: 70%;
  height: 180rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  left: 15%;
  top: 150rpx;
}

.btn-area {
  margin-top: 30rpx;
}
.section.bot{
    background: url('https://koudaizhilian-1254460722.cosbj.myqcloud.com/images/taskTextBg.jpg') 100% 100% no-repeat; 
}
