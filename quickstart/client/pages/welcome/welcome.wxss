page, view {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

form {
  width: 100%;
  display: block;
  z-index: 999;
}

page {
  position: relative;
}

view image {
  width: 100%;
  height: 100%;
  display: block;
}

.welcome {
  z-index: 0;
}

.start {
  padding: 0 20rpx;
  position: absolute;
  left: 50%;
  margin-left: -150rpx;
  top: 54%;
  width: 300rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  font-size: 80%;
  text-align: center;
  line-height: 100rpx;
  letter-spacing: 10rpx;
  border-radius: 20rpx;
}

.butVio {
  position: absolute;
  bottom: 8%;
  left: 25%;
}

button {
  background: #ccc;
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  letter-spacing: 12rpx;
  border-radius: 0;
  margin-bottom: 50rpx;
  background: #a7cde4;
}

.topImg {
  width: 100%;
  min-width: 320rpx;
  max-width: 750rpx;
  max-height: 500rpx;
}

.top-line {
  background: #ccc;
  height: 2rpx;
  margin: 10rpx 0 30rpx 0;
  width: 100%;
  position: relative;
  /* left: -20%; */
}

.explain {
  height: 600rpx;
  width: 80%;
  font-size: 30rpx;
  margin: 50rpx auto 0 auto;
  letter-spacing: 3rpx;
}

.top-explain {
  height: 210rpx;
}

.mui-row {
  height: 50rpx;
  line-height: 50prx;
}

.mui-row.first {
  height: 100rpx;
  line-height: 50rpx;
}

.btn-explain {
  height: 340rpx;
  text-indent: 2em;
  letter-spacing: 3rpx;
}
.button-hover{
  background: #a7cde4;  
} 