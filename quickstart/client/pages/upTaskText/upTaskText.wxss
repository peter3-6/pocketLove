@import '../template/template.wxss';

page {
  background: #ebebeb;
}

.section {
  margin: 45rpx 50rpx 0 50rpx;
}

.section.top {
  /* border:2rpx solid #bfbfbf; */
  border: 10rpx solid #e4c6d4;
  position: relative;
  height: 400rpx;
  margin: 30rpx 50rpx 20rpx 50rpx;
   font-size: 120%;
  text-align: center;
  color: #883f9e;
  background: url('https://koudaizhilian-1254460722.cosbj.myqcloud.com/images/taskTextBg.jpg') 100% 100% no-repeat;
  background-size: 100% 100%;
  border-radius: 20rpx;
}

.section-top-con {
  width: 66%;
  height: 50%;
  font-size: 70%;
  position: absolute;
  top: 150rpx;
  left: 18%;
}

input, textarea {
  border: 2rpx solid #bfbfbf;
  background: #fff;
  width: 100%;
}

.section.bot textarea {
  height: 300rpx;
  z-index: 0;
  border-radius: 20rpx;
}

.section .input-placeholder {
  color: #9c9c9c;
}

/* .btn-area{
	margin-top: 60rpx;
} */

.btn-area button {
  margin: 0 50rpx 40rpx 50rpx;
  color: #fff;
  letter-spacing: 50rpx;
  padding-right: 0;
}

.btn-area .submit {
  background: #e4c6d4;
}

.btn-area .reset {
  background: #b5b5b5;
}

.cue {
  height: 60rpx;
  line-height: 60rpx;
  line-height: 40rpx;
  display: block;
  color: #c184a3;
  text-align: center;
  margin-top: 16rpx;
  /* margin-top: 10rpx; */
}

.upTaskT {
  height: 260rpx;
  border: 1rpx solid #999;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 60rpx;
}

.mask.mask-bg {
  width: 80%;
  height: 100%;
  /* width: 600rpx;
  height: 600rpx; */
  position: absolute;
  top: 0;
  left: 0%;
  background: rgba(0, 0, 0, 0.7);
  overflow: hidden;
  /* z-index: 999999999999; */
  margin: 0;
  padding: 0 10%;
}

.upTask {
  position: relative;
  top: 10%;
  width: 100%;
  height: 800rpx;
  /*background-color: yellow;*/
}

.upTask image {
  width: 100%;
  height: 100%;
}

.uptaskX {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 60rpx;
  /*left: 0;*/
  right: -90%;
  /*text-align: right;*//*background-color: green;*//*float: right;*/
}

.upTaskBut {
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  font-size: 90%;
  letter-spacing: 10rpx;
  background-color: #883f9e;
  margin: 30rpx auto;
  padding: 10rpx;
}

form {
