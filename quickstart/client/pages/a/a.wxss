.modal-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .7);
  overflow: hidden;
  z-index: 9999;
}
.modalViem{
  position: absolute;
  top:26%;
  left:10%;
  width: 80%;
  height: 80%;
  height:50%;
}
.text.t{
  height: 70rpx;
}
.text{
  display: flex;
  width:100%;
  height: 70rpx; 
  line-height: 70rpx;
  color:#fff;
  text-align: center;
  font-size: 90%;
  letter-spacing: 3rpx;
  background-color: transparent;
  margin: 6rpx auto;
  flex-direction: column;
